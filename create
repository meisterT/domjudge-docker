#!/bin/sh

if [ ! -d domjudge.git ]; then
	git clone --bare https://github.com/DOMjudge/domjudge.git
fi

cd domjudge.git
git fetch
cd ..
tar czf domjudge.git.tgz domjudge.git

docker="/usr/bin/docker"
if [ -x "/usr/bin/docker.io" ]; then
	# debian/Ubuntu uses docker.io instead of docker
	docker="/usr/bin/docker.io"
fi
$docker build -t domjudge .
